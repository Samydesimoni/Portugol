programa
{
	
	funcao inicio()
	{
		inteiro num

		escreva("Insira um número inteiro: ")
		leia(num)

		se(num % 2 != 0){
			escreva("Este número é Ímpar: ",num)
		}senao{
			escreva("Este número é Par: ",num)
		}
	}
}
